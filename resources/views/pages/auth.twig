{% set portalTitle = 'Login' %}
{% extends 'layouts/full-width' %}

{% block primary %}
<section>
    <div class="container-small login-container">
        <h1>Enter 2FA Code</h1>
        <p>
            <strong>Check your e-mail</strong> and enter the code that was sent to continue authenticating.
        </p>


        <div class="card login-form">
            <div class="card-body">
                <form class="form" method="POST" action="{{ url.full }}">
                    {{ csrf_field() }}

                    <div class="form-group{{ errors.has('code') ? ' has-error' : '' }}">
                        <label for="code">Authentication Code</label>
                        <input id="code" type="code" name="code" value="{{ old('code') }}" required autofocus>

                        {% if errors.has('code') %}
                            <span class="help-block">
                                <strong>{{ errors.first('code') }}</strong>
                            </span>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <button type="submit" class="button button-product">
                            Authenticate
                        </button>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-link forgot-password" href="{{ route('dashboard') }}">
                            Resend Code
                        </a>
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</section>
{% endblock %}
