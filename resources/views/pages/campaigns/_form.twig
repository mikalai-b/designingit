
<div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" value="{{ campaign.title }}" class="medium" />
    {% include 'partials.messaging.error' with {field: 'title'} %}
</div>
<div class="form-group">
    <label for="start_date">Start Date</label>
    <input type="text" name="start_date" value="{{ campaign.startDate ? campaign.startDate|date('Y-m-d') : null }}" class="medium" />
    {% include 'partials.messaging.error' with {field: 'start_date'} %}
</div>
<div class="form-group">
    <label for="end_date">End Date</label>
    <input type="text" name="end_date" value="{{ campaign.endDate ? campaign.endDate|date('Y-m-d') : null }}" class="medium" />
    {% include 'partials.messaging.error' with {field: 'end_date'} %}
</div>
<div class="form-group">
    <label for="success_message">Success Message Template</label>
    <div class="help" v-pre>This message appears upon successful validation of coupon code. Template variables include: {% raw %}<tt>{{coupon_code.code}}</tt>, <tt>{{product.name}}</tt>, <tt>{{product.firstPeriodInMonths}}</tt>, <tt>{{product.strength}}</tt>, <tt>{{product.price}}</tt>, <tt>{{product.firstShipmentPrice}}</tt>{% endraw %}</div>
    <textarea name="success_message" v-pre>{{ campaign.successMessage }}</textarea>
    {% include 'partials.messaging.error' with {field: 'end_date'} %}
</div>

<campaign-effects-manager :effects="{{ campaign.effects|json_encode }}"></campaign-effects-manager>

{{ csrf_field() }}
<br />
<button class="button button-primary" type="submit">Save Campaign</button>